% Substitution definitions
% Format:
% <SMARTS> <replacement-string>

% elements
[#1]    hydrogen
[#6]    carbon
[#7]    nitrogen
[#8]    oxygen
[#9]    fluorine
[#15]   phosphorous
[#16]   sulfur
[#17]   chlorine
[#35]   bromine
[#53]   iodine

% electron withdrawing groups
[#7!-1,#8,#16]              ewg2
[#7!-1,#8!-1,#16!-1,$halogen]     ewg1

% halogens
[$smallhals,$largehals]     halogen
[$fluorine,$chlorine]       smallhals
[$bromine,$iodine]          largehals
